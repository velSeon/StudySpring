<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
<bean id="dao" class="com.dao.DeptDAO"/>

<context:property-placeholder location="com/config/jdbc.properties"/>

<bean id="serevice" class="com.service.DeptService" autowire="byName">
<!-- <constructor-arg name="dao" ref ="dao"></constructor-arg> -->
<property name="driver" value="${jdbc.driver}"></property>
<property name="url" value="${jdbc.url}"></property>
<property name="userid" value="${jdbc.userid}"></property>
<property name="passwd" value="${jdbc.pass}"></property>

</bean>

</beans>
